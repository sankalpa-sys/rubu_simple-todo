<center>

<table>
  <% @routines.each do |routine| %>
    <tr>
      <td><%= link_to routine.title, routine_path(routine) %></td>
      <td><%= button_to 'Edit', edit_routine_path(routine), method: 'get'%></td>
      <td><%= button_to 'Remove', routine_path(routine), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New Work", new_routine_path %>
</center>
